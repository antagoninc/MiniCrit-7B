# Model Configuration
MINICRIT_MODEL=wmaousley/MiniCrit-7B
MINICRIT_DEVICE=cuda  # cuda, cpu, mps, auto
MINICRIT_MAX_LENGTH=512
MINICRIT_PORT=8000

# Authentication
# Comma-separated list of valid API keys
MINICRIT_API_KEYS=key1,key2,key3

# Master admin key (auto-generated if not set)
# Use this to create new API keys via /admin/keys endpoint
MINICRIT_MASTER_KEY=your-secure-master-key-here

# Rate Limiting
# Requests per minute per API key
MINICRIT_RATE_LIMIT=60

# CORS
# Comma-separated list of allowed origins (* for all)
MINICRIT_CORS_ORIGINS=*

# Logging
MINICRIT_LOG_LEVEL=INFO
MINICRIT_LOG_REQUESTS=true

# Redis (optional - for distributed rate limiting)
# REDIS_URL=redis://localhost:6379

# HuggingFace (for model download)
# HF_TOKEN=your-huggingface-token
